FOPEN MACRO
	MOV AH,3DH
	MOV AL,0H
	INT 21H
ENDM
 
FREAD MACRO NR_BYTES
	PUSH CX
	MOV AH,3FH
	MOV CX,NR_BYTES
	INT 21H
	POP CX
ENDM
 
FCLOSE MACRO
	MOV	AH,3EH
	INT 21H
ENDM

PSTRING MACRO MSG
	PUSH DX
	PUSH AX
	
	LEA	DX,MSG
	MOV	AH,09H
	INT 21H
	
	POP AX
	POP DX
ENDM

PCHAR MACRO CHAR
	PUSH DX
	PUSH AX
	
	MOV DL,CHAR
	MOV AH,02H
	INT 21H
	
	POP AX
	POP DX
ENDM
	
 
 